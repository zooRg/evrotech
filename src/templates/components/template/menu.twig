<div class="header-menu">
    <nav class="header-menu-container">
        <ul class="header-menu-wrapper">
            {% for item in header.menu %}
                <li class="header-menu-item {% if item.sub %}header-menu-item-parent{% endif %}">
                    <a href="{{ item.href }}" class="header-link header-menu-link {% if item.class %}selected{% endif %}">{{ item.title }}</a>

                    {% if item.sub %}
                        <div class="header-menu-sub">
                            <ul class="header-menu-sub-wrapper">

                                {% for sub in item.sub %}
                                    <li  class="header-menu-sub-item {% if sub.class %}{{ sub.class }}{% endif %}">
                                        <a href="{{ sub.href }}" class="header-menu-sub-link">{{ sub.title }}</a>
                                    </li>
                                {% endfor %}

                            </ul>
                        </div>
                    {% endif %}

                </li>
            {% endfor %}
        </ul>
    </nav>
    <a href="tel:{{ header.phone }}" class="header-phone icon-phone">
        <span class="header-link">{{ header.phone }}</span>
    </a>
    <a href="mailto:{{ header.email }}" class="header-mail icon-mail">
        <span class="header-link">{{ header.email }}</span>
    </a>
</div>