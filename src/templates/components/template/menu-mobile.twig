<div class="header-menu-mobile">
    <div class="header-menu-close js-menu-close">
        <svg width="13" height="13" viewBox="0 0 13 13" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M1.7931 0L0 1.7931L4.70704 6.50014L0.00028091 11.2069L1.79338 13L6.50014 8.29324L11.2069 13L13 11.2069L8.29324 6.50014L13.0003 1.7931L11.2072 0L6.50014 4.70704L1.7931 0Z" />
        </svg>
    </div>
    <div class="header-menu-mobile-wrap" data-simplebar data-simplebar-auto-hide="true">
        <nav class="header-menu-mobile-container">
            <ul class="header-menu-mobile-wrapper list-unstyled">
                {% for item in header.menu %}
                    <li class="header-menu-mobile-item {% if item.sub %}header-menu-mobile-item-parent{% endif %}"{% if item.sub %} data-toggle="init"{% endif %}>

                        <div class="header-menu-mobile-head">
                            <a href="{{ item.href }}" class="header-menu-mobile-link header-link {% if item.class %}selected{% endif %}">{{ item.title }}</a>
                            {% if item.sub %}
                            <div class="header-menu-mobile-toggle icon-arrow-right" data-toggle="button"
                                 role="button"
                                 aria-pressed="false"
                                 aria-expanded="false"></div>
                            {% endif %}
                        </div>
                        {% if item.sub %}
                            <div class="header-menu-mobile-sub"
                                 data-toggle="area"
                                 style="display: none;">
                                <ul class="header-menu-mobile-sub-wrapper list-unstyled">

                                    {% for sub in item.sub %}
                                        <li  class="header-menu-mobile-sub-item {% if sub.class %}{{ sub.class }}{% endif %}">
                                            <a href="{{ sub.href }}" class="header-menu-mobile-sub-link header-link">{{ sub.title }}</a>
                                        </li>
                                    {% endfor %}

                                </ul>
                            </div>
                        {% endif %}

                    </li>
                {% endfor %}
            </ul>
        </nav>
    </div>

    <div class="header-menu-mobile-bottom">
        <a href="tel:{{ header.phone }}" class="header-menu-mobile-phone icon-phone">
            <span class="header-menu-mobile-link header-link">{{ header.phone }}</span>
        </a>
        <a href="mailto:{{ header.email }}" class="header-menu-mobile-mail icon-mail">
            <span class="header-menu-mobile-link header-link">{{ header.email }}</span>
        </a>
    </div>
</div>